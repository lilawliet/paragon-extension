{
  "manifest_version": 3,
  "name": "Paragon Wallet",
  "version": "1.0",

  "default_locale": "en",
  "description": "Paragon is a browser extension wallet that makes it safe & easy for you to store, send and receive NOVO. ",
  "icons": {
    "16": "/images/logo@16x.png",
    "32": "/images/logo@32x.png",
    "48": "/images/logo@48x.png",
    "128": "/images/logo@128x.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/logo@16x.png",
      "32": "/images/logo@32x.png",
      "48": "/images/logo@48x.png",
      "128": "/images/logo@128x.png"
    },
    "default_title": "Paragon Wallet"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "homepage_url":"https://paragon.li",
  "permissions": ["storage","unlimitedStorage", "activeTab","notifications"],
  "short_name": "Paragon Wallet",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    "pageProvider.js"
  ]
}
