{
  "short_name": "React App",
  "name": "Paragon Wallet",
  "version": "1.0",
  "default_locale": "en",
  "description": "Paragon Wallet",
  "manifest_version": 2,
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "declarativeContent","notifications"],
  "web_accessible_resources": [
    "/images/logo.png"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/logo.png",
      "32": "/images/logo.png",
      "48": "/images/logo.png",
      "128": "/images/logo@128x.png"
    },
    "default_title": "Paragon Wallet"
  },
  "icons": {
    "16": "/images/logo.png",
    "32": "/images/logo.png",
    "48": "/images/logo.png",
    "128": "/images/logo@128x.png"
  }
}
